<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/welcomeFragment">

    <!-- Welcome Fragment -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.questionsanswers.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <!-- Question Fragment -->
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.questionsanswers.QuestionFragment"
        android:label="Question"
        tools:layout="@layout/fragment_question">

        <!-- Argument for the current question index -->
        <argument
            android:name="currentQuestionIndex"
            app:argType="integer"
            android:defaultValue="0" />

        <!-- Argument for the accumulated score -->
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="0" />

        <!-- Action to go to the Answer Fragment -->
        <action
            android:id="@+id/action_questionFragment_to_answerFragment"
            app:destination="@id/answerFragment">

            <!-- Arguments passed to AnswerFragment -->
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer" />
            <argument
                android:name="isCorrect"
                app:argType="boolean" />
            <argument
                android:name="correctAnswer"
                app:argType="string" />
            <argument
                android:name="score"
                app:argType="integer" />
        </action>

        <!-- Action to go to Result Fragment when questions are finished -->
        <action
            android:id="@+id/action_questionFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="score"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- Answer Fragment -->
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.example.questionsanswers.AnswerFragment"
        android:label="Answer"
        tools:layout="@layout/fragment_answer">

        <!-- Arguments received by AnswerFragment -->
        <argument
            android:name="isCorrect"
            app:argType="boolean" />
        <argument
            android:name="correctAnswer"
            app:argType="string" />
        <argument
            android:name="currentQuestionIndex"
            app:argType="integer" />
        <argument
            android:name="score"
            app:argType="integer" />

        <!-- Action to go to the next Question Fragment or Result -->
        <action
            android:id="@+id/action_answerFragment_to_questionFragment"
            app:destination="@id/questionFragment">

            <!-- Arguments to reset the question flow -->
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer" />
            <argument
                android:name="score"
                app:argType="integer" />
        </action>

        <!-- Action to go to Result Fragment when questions are finished -->
        <action
            android:id="@+id/action_answerFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="score"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- Result Fragment -->
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.questionsanswers.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result">

        <!-- Argument for the final score -->
        <argument
            android:name="score"
            app:argType="integer" />

        <!-- Action to restart the game from the first question -->
        <action
            android:id="@+id/action_resultFragment_to_questionFragment"
            app:destination="@id/questionFragment">
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="score"
                app:argType="integer"
                android:defaultValue="0" />
        </action>

        <action
            android:id="@+id/action_resultFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
</navigation>
