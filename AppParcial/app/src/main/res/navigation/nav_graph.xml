<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/welcomeFragment">

    <!-- Fragmento de bienvenida -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.questionsanswers.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <!-- Fragmento de la pregunta -->
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.questionsanswers.QuestionFragment"
        android:label="Question"
        tools:layout="@layout/fragment_question">

        <!-- Argumento para el índice de la pregunta actual -->
        <argument
            android:name="currentQuestionIndex"
            app:argType="integer"
            android:defaultValue="0" />

        <!-- Argumento para la puntuación acumulada -->
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="0" />

        <!-- Acción para ir al fragmento de respuesta -->
        <action
            android:id="@+id/action_questionFragment_to_answerFragment"
            app:destination="@id/answerFragment">

            <!-- Argumentos que se pasan a AnswerFragment -->
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer" />
            <argument
                android:name="isCorrect"
                app:argType="boolean" />
            <argument
                android:name="correctAnswer"
                app:argType="string" />
            <argument
                android:name="score"
                app:argType="integer" />
        </action>

        <!-- Acción para ir al fragmento de resultados cuando se acaban las preguntas -->
        <action
            android:id="@+id/action_questionFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="score"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- Fragmento de la respuesta -->
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.example.questionsanswers.AnswerFragment"
        android:label="Answer"
        tools:layout="@layout/fragment_answer">

        <!-- Argumentos que recibe AnswerFragment -->
        <argument
            android:name="isCorrect"
            app:argType="boolean" />
        <argument
            android:name="correctAnswer"
            app:argType="string" />
        <argument
            android:name="currentQuestionIndex"
            app:argType="integer" />
        <argument
            android:name="score"
            app:argType="integer" />


        <!-- Acción para ir al siguiente fragmento de preguntas o al resultado -->
        <action
            android:id="@+id/action_answerFragment_to_questionFragment"
            app:destination="@id/questionFragment">

            <!-- Argumentos para reiniciar el flujo de preguntas -->
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer" />
            <argument
                android:name="score"
                app:argType="integer" />
        </action>

        <!-- Acción para ir al fragmento de resultados cuando se acaban las preguntas -->
        <action
            android:id="@+id/action_answerFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="score"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- Fragmento de resultados -->
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.questionsanswers.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result">

        <!-- Argumento para la puntuación final -->
        <argument
            android:name="score"
            app:argType="integer" />

        <!-- Acción para reiniciar el juego desde la primera pregunta -->
        <action
            android:id="@+id/action_resultFragment_to_questionFragment"
            app:destination="@id/questionFragment">
            <argument
                android:name="currentQuestionIndex"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="score"
                app:argType="integer"
                android:defaultValue="0" />
        </action>

        <action
            android:id="@+id/action_resultFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
</navigation>
